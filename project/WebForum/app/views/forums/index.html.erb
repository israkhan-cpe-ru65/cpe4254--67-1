<% if user_signed_in? %>
    <% if @user.email.present? %>
        <h2><%= @user.email %></h2>
    <% end %>
<% end %>
          
<% @forums.each do |forum| %>
    <div class="col-md-4">
        <h2><%= forum.thread %></h2>
        <%= link_to "View Forum Thread", forum_path(forum), class: "btn btn-default" %>
    </div>
<% end %>
<%= link_to "New Forum Thread", new_forum_path %>
